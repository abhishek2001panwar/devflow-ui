{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false, // Allow emitting the output (this will enable `.d.ts` files)
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": false, // Disable incremental compilation for tsup
    "declaration": true, // Enable type declarations
    "declarationMap": true, // Enable declaration maps
    "outDir": "./dist" // Specify output directory
    ,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
   
  ],
  "exclude": [
    "node_modules"
  ]
}
